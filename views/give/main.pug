extends ../base.pug
block content
  script(src="js/give.js")
  .panel.panel-default
    .panel-body
      .btn-toolbar
        .btn-group
          a.btn.btn-success(href="https://microsoft.benevity.org/volunteer/external/track/", target="_blank")
            i.glyphicon.glyphicon-plus
            span #{' '}Add Time
        .btn-group
          a.btn.btn-default(href="https://microsoft.benevity.org/volunteer/export/my-history/2017", target="_blank")
            i.glyphicon.glyphicon-download-alt
            span #{' '}Get Report
          label.btn.btn-default(for="give-report-picker")
            i.glyphicon.glyphicon-calendar
            span #{' '}Load Report
            input#give-report-picker(type="file")
      #give-report
        h3 So far, this year&hellip;
        dl.dl-horizontal
          dt
            h4.glyphicon.glyphicon-time
          dd
            h4#give-report-time
          dt
            h4.glyphicon.glyphicon-usd
          dd
            h4#give-report-match
          dt
            h4.glyphicon.glyphicon-heart
          dd
            h3.pacifico#give-report-thanks
    table.table.table-hover.table-striped#give-table
      thead
        tr
          th Date
          th Time
          th Match
      tbody
    #give-info.jumbotron
      h2 README
      strong
      | This place is your best friend for tracking the time you have volunteered to #{' '}
      a(href="https://omegaup.org", target="_blank")
        strong omegaUp
      | , additionally you can also review a report of what you have contributed this year!
      h3 How to&hellip;
      dl.dl-horizontal
        dt Track Time
        dd
          | Simply press the#{' '}
          strong
            i.glyphicon.glyphicon-plus
            span #{' '}Add Time
          | #{' '}button (this will take you to the #{' '}
          a(href="https://microsoft.benevity.org/volunteer/external/track/", target="_blank")
            strong Track External Volunteering
          | #{' '} form).
        dt Get Report
        dd
          | Click#{' '}
          strong
            i.glyphicon.glyphicon-download-alt
            span #{' '}Get Report
          | #{' '}to download the *.csv directly from the#{' '}
          a(href="https://microsoft.benevity.org", target="_blank")
            strong Microsoft Benevity
          | #{' '} site. It's safe - as it's just an anchor tag!
        dt Load Report
        dd
          | Use#{' '}
          strong
            i.glyphicon.glyphicon-calendar
            span #{' '}Load Report
          | #{' '}to select the previously downloaded report and see your stats!
        dt
          h3.glyphicon.glyphicon-heart
        dd
          h3.pacifico Thank you for all your support!
